---
// Hero Component - Plane View Collective
interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
}

const { 
  title = 'Helping brands get noticed, understood, and remembered.',
  subtitle = 'We step in to simplify the message and amplify the impact.',
  ctaText = 'Start Your Project',
  ctaHref = '/contact'
} = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">{title}</h1>
      <p class="hero-subtitle">{subtitle}</p>
      <div class="hero-cta">
        <a href={ctaHref} class="btn btn-primary">
          {ctaText}
          <span class="arrow">→</span>
        </a>
        <a href="/work" class="btn btn-ghost">
          View Our Work
        </a>
      </div>
    </div>
  </div>

  <!-- Decorative dashed path -->
  <div class="hero-decoration" aria-hidden="true">
    <div class="plane-path">
      <svg width="100%" height="200" viewBox="0 0 1200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path 
          d="M0 100 Q 300 50, 600 100 T 1200 100" 
          stroke="var(--color-steel-blue)" 
          stroke-width="2" 
          stroke-dasharray="10 10"
          opacity="0.2"
        />
      </svg>
    </div>
  </div>
</section>

<style>
  /*
    FIX: No calc() with CSS variables here.
    The nav-spacer in Navbar.astro handles clearing the fixed navbar.
    Hero padding is purely internal breathing room — hardcoded px values
    that never conflict with the global spacing variable changes at breakpoints.

    FIX: min-height changed from 40vh to calc(100vh - 85px) so the hero
    always fills the visible viewport below the navbar on desktop.
    This prevents content from sitting hidden behind the nav on first load.
  */
  .hero {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 48px;
    padding-bottom: 80px;
    overflow: hidden;
  }

  .container {
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--color-jet-black);
    margin: 0;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    font-weight: 400;
    color: var(--color-slate-grey);
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
    margin-top: var(--spacing-md);
  }

  .hero-decoration {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    pointer-events: none;
    z-index: 1;
  }

  .plane-path {
    opacity: 0.3;
  }

  /* 
    FIX: Mobile min-height accounts for smaller nav (70px).
    Padding values are hardcoded — not affected by global CSS variable 
    changes at breakpoints which was causing the layout shift.
  */
  @media (max-width: 768px) {
    .hero {
   min-height: 30vh;
    padding-top: 32px;
    padding-bottom: 60px;
    }

    .hero-cta {
      flex-direction: column;
      align-items: stretch;
    }

    .hero-cta .btn {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding-top: 24px;
      padding-bottom: 48px;
    }
  }
</style>