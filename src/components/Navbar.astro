---
const navItems = [
  { href: '/about', label: 'About' },
  { href: '/services', label: 'Services' },
  { href: '/work', label: 'Work' },
  { href: '/contact', label: 'Contact' }
];
---

<!-- Fixed Navigation -->
<nav class="nav">
  <div class="container">
    <div class="nav-wrapper">
      <!-- Logo -->
      <a href="/" class="logo">
        <div class="logo-icon">
          <img src="/logo/Plane View Collective Logos-01.svg" alt="Plane View Collective" width="180" height="32" />
        </div>
      </a>

      <!-- Mobile Menu Toggle -->
      <button class="mobile-menu-toggle" aria-label="Toggle menu" aria-expanded="false">
        <span class="burger" aria-hidden="true">
          <span class="bar bar1"></span>
          <span class="bar bar2"></span>
          <span class="bar bar3"></span>
        </span>
        <span class="sr-only">Toggle menu</span>
      </button>

      <!-- Navigation Links -->
      <div class="nav-menu">
        <ul class="nav-links">
          {navItems.map((item) => (
            <li>
              <a href={item.href} class="nav-link">
                {item.label}
              </a>
            </li>
          ))}
        </ul>

        <!-- Mobile CTA -->
        <a href="/contact" class="btn btn-primary mobile-nav-cta">
          Get in Touch
          <span class="arrow">→</span>
        </a>
      </div>

      <!-- Desktop CTA -->
      <div class="nav-cta-wrapper">
        <a href="/contact" class="btn btn-primary nav-cta">
          Get in Touch
          <span class="arrow">→</span>
        </a>
      </div>
    </div>
  </div>
</nav>

<!-- 
  FIX: Spacer is OUTSIDE the nav element, not inside nav-wrapper.
  This pushes page content below the fixed navbar naturally.
  Height is synced to actual nav height by the updateNavHeight() function.
-->
<div class="nav-spacer" aria-hidden="true"></div>

<script>
function initNav() {
  const nav = document.querySelector('.nav');
  const menuToggle = document.querySelector('.mobile-menu-toggle');
  const navMenu = document.querySelector('.nav-menu');
  const body = document.body;

  // Guard — if nav not found, bail out
  if (!nav) return;

  // Scroll effect — add glass effect on scroll
  window.addEventListener('scroll', () => {
    if (window.pageYOffset > 50) {
      nav.classList.add('scrolled');
    } else {
      nav.classList.remove('scrolled');
    }
  });

  // Mobile menu toggle
  menuToggle?.addEventListener('click', () => {
    const isActive = menuToggle.classList.toggle('active');
    navMenu?.classList.toggle('active');
    body.classList.toggle('menu-open');
    // FIX: Keep aria-expanded in sync for accessibility
    menuToggle.setAttribute('aria-expanded', isActive ? 'true' : 'false');
  });

  // Close menu on nav link click
  document.querySelectorAll('.nav-link, .mobile-nav-cta').forEach(link => {
    link.addEventListener('click', () => {
      menuToggle?.classList.remove('active');
      menuToggle?.setAttribute('aria-expanded', 'false');
      navMenu?.classList.remove('active');
      body.classList.remove('menu-open');
    });
  });

  // Close menu on outside click
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (!target.closest('.nav-wrapper') && navMenu?.classList.contains('active')) {
      menuToggle?.classList.remove('active');
      menuToggle?.setAttribute('aria-expanded', 'false');
      navMenu?.classList.remove('active');
      body.classList.remove('menu-open');
    }
  });

  // FIX: updateNavHeight syncs both the CSS variable AND the spacer element
  // so the hero always clears the navbar correctly on every screen size
  function updateNavHeight() {
    const navEl = document.querySelector('.nav');
    const spacer = document.querySelector('.nav-spacer') as HTMLElement | null;
    if (!navEl) return;
    const h = Math.ceil(navEl.getBoundingClientRect().height);
    document.documentElement.style.setProperty('--nav-height', h + 'px');
    if (spacer) spacer.style.height = h + 'px';
  }

  // Run immediately, on resize, and on menu open/close
  updateNavHeight();
  window.addEventListener('resize', () => requestAnimationFrame(updateNavHeight));

  // FIX: MutationObserver watches for class changes on nav (scrolled, etc)
  // and re-measures height in case it changes
  const observer = new MutationObserver(() => updateNavHeight());
  observer.observe(nav, { attributes: true, childList: false, subtree: false });
}

// FIX: Use astro:page-load instead of DOMContentLoaded so this
// re-runs after every ViewTransition page navigation
document.addEventListener('astro:page-load', initNav);
</script>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    --nav-height: 85px;
    background-color: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid rgba(17, 17, 17, 0.08);
    transition: all var(--transition-base);
  }

  .nav.scrolled {
    background-color: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(24px) saturate(200%);
    -webkit-backdrop-filter: blur(24px) saturate(200%);
    box-shadow: 0 4px 24px rgba(17, 17, 17, 0.06);
  }

  .nav-wrapper {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding-top: var(--spacing-md);
    padding-bottom: var(--spacing-md);
    gap: var(--spacing-lg);
  }

  /* 
    FIX: Spacer is outside nav, sized to match nav height.
    JS keeps this in sync via updateNavHeight().
  */
  .nav-spacer {
    display: block;
    width: 100%;
    height: 85px; /* default — JS overrides this with exact measured height */
  }

  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    text-decoration: none;
    color: var(--color-jet-black);
    transition: opacity var(--transition-base);
    z-index: 1001;
    justify-self: start;
  }

  .logo:hover { opacity: 0.7; }

  .logo-icon {
    width: auto;
    height: auto;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-icon img {
    max-width: 180px;
    height: auto;
    display: block;
    object-fit: contain;
  }

  /* Mobile Menu Toggle */
  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    z-index: 1001;
    width: 44px;
    height: 44px;
    position: relative;
    align-items: center;
    justify-content: center;
    color: var(--color-jet-black);
  }

  .mobile-menu-toggle .burger {
    display: inline-block;
    width: 22px;
    height: 16px;
    position: relative;
  }

  .mobile-menu-toggle .bar {
    display: block;
    position: absolute;
    left: 0;
    right: 0;
    height: 2px;
    background: currentColor;
    border-radius: 2px;
    transition: transform 230ms cubic-bezier(.4,0,.2,1), opacity 180ms ease;
  }

  .mobile-menu-toggle .bar1 { top: 0; }
  .mobile-menu-toggle .bar2 { top: 7px; }
  .mobile-menu-toggle .bar3 { bottom: 0; }

  .mobile-menu-toggle.active .bar1 { transform: translateY(7px) rotate(45deg); }
  .mobile-menu-toggle.active .bar2 { opacity: 0; transform: scaleX(0); }
  .mobile-menu-toggle.active .bar3 { transform: translateY(-7px) rotate(-45deg); }

  .sr-only {
    position: absolute; width: 1px; height: 1px;
    padding: 0; margin: -1px; overflow: hidden;
    clip: rect(0,0,0,0); white-space: nowrap; border: 0;
  }

  /* Nav menu — centered desktop */
  .nav-menu {
    display: flex;
    align-items: center;
    gap: var(--spacing-xl);
    justify-self: center;
  }

  .nav-cta-wrapper {
    display: flex;
    justify-self: end;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-link {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-jet-black);
    text-decoration: none;
    transition: color var(--transition-base);
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-steel-blue);
    transition: width var(--transition-base);
  }

  .nav-link:hover { color: var(--color-steel-blue); }
  .nav-link:hover::after { width: 100%; }

  .nav-cta { white-space: nowrap; }

  .mobile-nav-cta { display: none; }

  /* ── Mobile ── */
  @media (max-width: 768px) {
    .nav {
      --nav-height: 70px;
    }

    /* FIX: Spacer height reduced on mobile to match smaller nav */
    .nav-spacer {
      height: 70px;
    }

    .nav-wrapper {
      display: flex;
      justify-content: space-between;
    }

    .mobile-menu-toggle {
      display: flex;
      width: auto;
      height: auto;
      padding: 6px;
    }

    .nav-cta-wrapper { display: none; }

    .nav-menu {
      position: fixed;
      top: 0;
      right: -100%;
      width: 280px;
      height: 100vh;
      background-color: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px) saturate(180%);
      -webkit-backdrop-filter: blur(20px) saturate(180%);
      box-shadow: -4px 0 24px rgba(17, 17, 17, 0.1);
      flex-direction: column;
      align-items: stretch;
      gap: 0;
      padding: calc(var(--spacing-md) * 2 + 3.5rem) var(--spacing-lg) var(--spacing-xl);
      transition: right var(--transition-slow);
      overflow-y: auto;
    }

    .nav-menu.active {
      right: 0;
      background-color: #ffffff !important;
      backdrop-filter: none !important;
      -webkit-backdrop-filter: none !important;
      opacity: 1 !important;
      z-index: 1300;
      box-shadow: -8px 0 32px rgba(17, 17, 17, 0.12);
      will-change: transform, opacity;
    }

    .nav-menu.active::before {
      content: '';
      position: absolute;
      inset: 0;
      background: #ffffff !important;
      pointer-events: none;
      z-index: -1;
    }

    .nav-links {
      flex-direction: column;
      align-items: flex-start;
      gap: 0;
      width: 100%;
    }

    .nav-links li {
      width: 100%;
      border-bottom: 1px solid rgba(17, 17, 17, 0.1);
    }

    .nav-link {
      display: block;
      width: 100%;
      padding: var(--spacing-md) 0;
      font-size: 1.125rem;
    }

    .nav-link::after { display: none; }

    .mobile-nav-cta {
      display: flex;
      margin-top: var(--spacing-lg);
      width: 100%;
      justify-content: center;
    }

    :global(body.menu-open) {
      overflow: hidden;
    }
  }

  /* Tablet */
  @media (min-width: 769px) and (max-width: 1024px) {
    .nav-links { gap: var(--spacing-md); }
    .nav-link { font-size: 0.875rem; }
  }
</style>