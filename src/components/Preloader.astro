---
// Preloader Component - Plane View Collective
---

<!-- 
  FIX: transition:persist keeps the preloader alive across ViewTransitions
  so it doesn't re-trigger on every page navigation.
  style="display:none" hides it by default — script shows it only if not seen.
-->
<div id="preloader" class="preloader" style="display:none" transition:persist>
  <video
    class="preloader-animation"
    autoplay
    muted
    playsinline
    disablepictureinpicture
  >
    <source src="/videos/plane-intro.webm" type="video/webm" />
  </video>
  <button id="preloader-skip" class="preloader-skip" type="button">
    Skip <span class="skip-arrow">→</span>
  </button>
  <div class="preloader-progress">
    <div class="preloader-bar" id="preloader-bar"></div>
  </div>
</div>

<script>
const preloader = document.getElementById('preloader')!;
const skipBtn   = document.getElementById('preloader-skip')!;
const bar       = document.getElementById('preloader-bar')!;
const video     = preloader.querySelector('video')!;

function dismiss() {
  // FIX: Save to localStorage so preloader never shows again this browser session
  try { localStorage.setItem('pvc-intro-seen', '1'); } catch(e) {}

  preloader.classList.add('preloader-out');

  // FIX: Unlock scroll on both body AND html — some browsers lock on html not body
  document.body.style.overflow = '';
  document.documentElement.style.overflow = '';

  // FIX: Dispatch resize event so Navbar recalculates its height
  // and the nav-spacer updates correctly before hero becomes visible
  window.dispatchEvent(new Event('resize'));

  setTimeout(() => {
    preloader.style.display = 'none';
    // FIX: Second resize after preloader is fully hidden to ensure
    // nav spacer is correct once layout repaints
    window.dispatchEvent(new Event('resize'));
  }, 800);
}

// FIX: Wrap localStorage in try/catch — private browsing blocks it on some browsers
let alreadySeen = false;
try { alreadySeen = !!localStorage.getItem('pvc-intro-seen'); } catch(e) {}

if (alreadySeen) {
  // Already seen — hide immediately and make absolutely sure scroll is unlocked
  preloader.style.display = 'none';
  document.body.style.overflow = '';
  document.documentElement.style.overflow = '';
} else {
  // First visit — show preloader and lock scroll
  preloader.style.display = 'flex';
  document.body.style.overflow = 'hidden';
  document.documentElement.style.overflow = 'hidden';

  // FIX: Sync progress bar to actual video duration via loadedmetadata
  // instead of a hardcoded timer — works for any video length
  video.addEventListener('loadedmetadata', () => {
    bar.style.transition = `width ${video.duration}s linear`;
    requestAnimationFrame(() => {
      requestAnimationFrame(() => { bar.style.width = '100%'; });
    });
  });

  // FIX: Fallback timer in case video never fires ended/error events
  const fallbackTimer = setTimeout(dismiss, 25000);

  // Dismiss when video naturally ends
  video.addEventListener('ended', () => {
    clearTimeout(fallbackTimer);
    dismiss();
  });

  // FIX: Also dismiss if video fails to load — prevents infinite lock
  video.addEventListener('error', () => {
    clearTimeout(fallbackTimer);
    dismiss();
  });

  // Skip button — clears fallback timer and pauses video cleanly
  skipBtn.addEventListener('click', () => {
    clearTimeout(fallbackTimer);
    video.pause();
    dismiss();
  });
}
</script>

<style>
  /* Base preloader — fullscreen fixed overlay */
  .preloader {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: #111111;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.8s ease;
  }

  /* Fade out class added by dismiss() */
  .preloader-out {
    opacity: 0;
    pointer-events: none;
  }

  /* FIX: position:absolute + inset:0 ensures video fills the entire preloader */
  .preloader-animation {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
    display: block;
  }

  /* Wordmark top left */
  .preloader::before {
    content: 'PLANE VIEW';
    position: absolute;
    top: 36px;
    left: 40px;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.5);
    z-index: 2;
  }

  /* Skip button */
  .preloader-skip {
    position: absolute;
    bottom: 48px;
    right: 40px;
    z-index: 2;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.25);
    color: rgba(255, 255, 255, 0.85);
    font-family: inherit;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.04em;
    padding: 10px 20px;
    border-radius: 9999px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 6px;
    transition: background 0.2s ease, border-color 0.2s ease, color 0.2s ease;
    backdrop-filter: blur(4px);
  }

  .preloader-skip:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
    color: #fff;
  }

  .skip-arrow {
    transition: transform 0.2s ease;
  }

  .preloader-skip:hover .skip-arrow {
    transform: translateX(3px);
  }

  /* Progress bar */
  .preloader-progress {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: rgba(255, 255, 255, 0.1);
    z-index: 2;
  }

  .preloader-bar {
    height: 100%;
    width: 0%;
    background: #2F6FED;
  }

  /* Tablet */
  @media (max-width: 768px) {
    .preloader-animation {
      object-position: center 30%;
    }
    .preloader::before {
      top: 28px;
      left: 24px;
      font-size: 0.7rem;
    }
    .preloader-skip {
      bottom: 40px;
      right: 24px;
      font-size: 0.8rem;
      padding: 8px 16px;
    }
  }

  /* Mobile */
  @media (max-width: 480px) {
    .preloader-animation {
      object-position: 60% 30%;
    }
    .preloader::before {
      top: 20px;
      left: 16px;
      font-size: 0.65rem;
      letter-spacing: 0.15em;
    }
    .preloader-skip {
      bottom: 28px;
      right: 16px;
      font-size: 0.75rem;
      padding: 7px 14px;
      gap: 4px;
    }
  }

  /* Small mobile */
  @media (max-width: 360px) {
    .preloader::before {
      font-size: 0.6rem;
      letter-spacing: 0.12em;
    }
    .preloader-skip {
      bottom: 24px;
      right: 12px;
      font-size: 0.7rem;
      padding: 6px 12px;
    }
  }
</style>